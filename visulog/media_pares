algoritmo "media_pares"
// Função :
// Autor :
// Data : 18/04/2022
// Seção de Declarações 
var
i, N : inteiro
Vet : Vetor [0..9] de inteiro
Soma, Impar, cont  : real
inicio
      Escreva("Quantos elementos vai ter o vetor? ")
      Leia(N)
      Impar <- 0
      Soma <- 0
      Cont <- 0
      
      Para i de 0 ate N-1 faca
           Escreva("Digite um numero: ")
           leia(vet[i])
      fimpara
      
      para i de 0 ate N-1 faca
           Se (vet[i] % 2 = 0) entao
              Soma <- (Soma + vet[i])
              cont <- cont + 1
           senao
                Impar <- impar + 1
           fimse
      fimpara
      
      Se Impar <> N entao
      
         Escreval("MEDIA DOS PARES = ", (Soma / cont))
         
      senao
      
           Escreval("NENHUM NUMERO PAR")
           
      fimse
           
      
      

fimalgoritmo