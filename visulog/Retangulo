algoritmo "retangulo"

var
   largura, altura: real
   area: real
   perimetro : real
   diagonal : real

inicio
      escreval("Digite a largura e o altura do terreno: ")
      leia (largura)
      leia (altura)
      perimetro <- (largura * 2) + (altura * 2)
      area <- largura * altura
      diagonal <- RaizQ((largura^2) + (altura^2))
      escreval("Area do terreno = ",area:8:4)
      escreval("Perimetro do terreno = ", perimetro:8:4)
      Escreval("Diagonal = ", diagonal:8:4)
      
fimalgoritmo